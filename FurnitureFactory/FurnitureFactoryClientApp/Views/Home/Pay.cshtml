@{
    ViewData["Title"] = "Pay";
}
<div class="text-center">
    <h2 class="display-4">Создание покупки</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Покупка:</div>
        <div class="col-8">
            <input type="text" name="purchase" id="purchase" value="@ViewBag.PurchaseName" readonly="true"/>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Внесённая сумма:</div>
        <div class="col-8"><input type="text" name="sumToPayment" id="sumToPayment"/></div>
    </div>
    <div class="row">
        <div class="col-4">Сумма к оплате:</div>
        <div class="col-8">
            <input type="text" id="sum" name="sum" readonly="true" value="@ViewBag.PurchaseSum" asp-is-invariant="true"/>
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Оплатить" class="btn btnprimary" /></div>
    </div>
</form>