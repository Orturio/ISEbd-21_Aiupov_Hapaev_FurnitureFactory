@{
    ViewData["Title"] = "Update";
}
<div class="text-center">
    <h2 class="display-4">Изменение мебели</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Мебель:</div>
        <div class="col-8">
            <input type="text" name="furniture" id="furniture" value="@ViewBag.Furniture.FurnitureName"/>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Материал:</div>
        <div class="col-8"><input type="text" name="material" id="material" value="@ViewBag.Furniture.Material" /></div>
    </div>
    <div class="row">
        <div class="col-4">Цена:</div>
        <div class="col-8">
            <input type="text" id="price" name="price" value="@ViewBag.Furniture.FurniturePrice"/>
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Изменить" class="btn btnprimary" /></div>
    </div>
</form>