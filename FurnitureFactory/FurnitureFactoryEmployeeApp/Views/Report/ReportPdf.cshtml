@model FurnitureFactoryBusinessLogics.BindingModels.ReportBindingModel

@{ ViewData["Title"] = "Report Pdf"; }

<h1>Получить отчет в PDF</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label">С</label>
                <input asp-for="DateFrom" class="form-control" />
                <label asp-for="DateTo" class="control-label">по</label>
                <input asp-for="DateTo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сформировать" asp-action="CreateReportFurnitureToPdfFile" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить на почту" asp-action="SendMail" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
